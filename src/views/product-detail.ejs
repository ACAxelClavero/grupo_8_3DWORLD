<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="/css/productDetailStyle.css">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
        <title>3D World</title>
    </head>
<body>

    <!-- agregar header-->
    <%- include('./partials/header.ejs')  %>


    <main class="main-detalle-del-producto">
        <h2 class="titulo-producto"><%= product.name %></h2>
        <div class="division-del-main">    
        <section class="seccion-del-carrusel">    
        <div class="contenedor-img-del-carrusel" id="imagen1">
            <div class="img-del-carrusel" id="imagen1">
             <a href="imagen1">   <img src="/images/productos/<%= product.photo1 %>" alt="img-1"></a>
            </div>
           
        </div>
        <div class="contenedor-img-del-carrusel" id="imagen2">
            <div class="img-del-carrusel" id="imagen2">
                <a href="imagen2">    <img src="/images/productos/<%= product.photo2 %>" alt="img-2"></a>
            </div>
            
        </div>
        <div class="contenedor-img-del-carrusel" id="imagen3">
            <div class="img-del-carrusel" id="imagen3">
                <a href="imagen3">     <img src="/images/productos/<%= product.photo3 %>" alt="img-3"></a>
            </div>
           
        </div>
        <div class="contenedor-img-del-carrusel" id="imagen4">
            <div class="img-del-carrusel" id="imagen4">
                <a href="imagen4">     <img src="/images/productos/<%= product.photo4 %>" alt="imagen4"></a>
            </div>
        </div>
    </section>
    <div id="myModal" class="modal">
        <span class="close" onclick="closeModal()">&times;</span>
        <img class="modal-content" id="img01">
    </div>

    <div class="descripcion-general">
    <section class="descripcion-corta">
        <p><%= product.description %></p>
    </section> 
    </div>  
    <section class="seccion-elecciones-de-compra">
        <form action="">
            <div class="contenedor-botones-dimensiones">
                <label class="boton-dimensiones" for="dimensiones">Dimensiones</label>
                <select class="seleccionar-dimensiones" name="dimensiones" id="dimensiones">
                    <option value="s">Small</option>
                    <option value="m">Medium</option>
                    <option value="l">Large</option>
                    <option value="xl">XLarge</option>
                </select>
            </div>
            <div class="contenedor-botones-color">
                <label class="boton-colores" for="cantidad">Color</label>
                <select class="seleccionar-colores" name="cantidad" id="cantidad">
                    <option value="negro">Negro</option>
                    <option value="blanco">Blanco</option>
                    <option value="azul">Azul</option>
                </select>
            </div>
            </form>
        </section>
        <div class="contenedor-botones-abajo">
        <div class="contenedor-boton-agregar-al-carrito">
            <a class="boton-al-carrito" href="/product/add-to-cart/<%= product.id %>">Agregar a la bolsa de compras</a>
        </div>
        <section class="seccion-detalles-de-compra">
            <a class="boton" href="">Medios de pago</a>
            <a class="boton" href="">Devolucion</a>
            <a class="boton" href="">Compartir</a>
            
            <button class="boton-al-carrito">
                                <a href="/product/<%= product.id %>/edit-product"  id="editarProducto">editar Producto </a>

            </button>
            
            <ul>                
                <form action="/product/<%= product.id %>/delete?_method=DELETE" method="POST">
                   
                    <button type="submit" id="delete">Eliminar Producto</button>
                </form>
                <script>
                    function confirmDelete() {
                        var result = confirm("¿Estás seguro de que deseas eliminar este producto? Esta acción no se puede deshacer.");
                        return result;
                    }
                </script>
            </ul>
        </section>

    </main>

    <%- include('./partials/footer')  %>

    
</body>
</html>
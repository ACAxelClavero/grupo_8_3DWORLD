<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="/css/new-product-style.css">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <title>Cargar nuevo producto</title>
</head>

<body>
<main>
        <form action="/product/<%= product.id %>" method="post" class="form-product" enctype="multipart/form-data">
            <label for="nombre">Nombre del producto</label>
            <input type="hidden" name="productId" value="<%= product.id %>">
            <input type="text" name="name" value="<%= product.name %>" required>
            <label for="descripcion-principal">Descripcion principal</label>
            <textarea name="description" id="" cols="30" rows="10"><%= product.description %></textarea>
            <label for="size">tama√±o</label>
                <select name="size" id="size">
                    <option value="Categoria1">Small</option>
                    <option value="Categoria2">Medium</option>
                    <option value="Categoria3">Large</option>
                    <option value="Categoria4">Exta Large</option>
                </select>
            <!-- AGREGAR CANTIDAD DE ARCHIVOS -->
            <!-- EDITAR OPCIONES  -->
            <label for="color">Color</label>
            <select name="color" id="color">
                <option value="negro">Negro</option>
                <option value="blanco">Blanco</option>
                <option value="azul">Azul</option>
            </select>
        <label for="price">Precio de venta</label>
        <input type="number" name="price" value="<%= product.price %>">
        <label for="imagenesProducts">Imagen 1</label>
<input type="file" id="imagen1" name="imagenesProducts">

<label for="imagenesProducts">Imagen 2</label>
<input type="file" id="imagen2" name="imagenesProducts">

<label for="imagenesProducts">Imagen 3</label>
<input type="file" id="imagen3" name="imagenesProducts">

<label for="imagenesProducts">Imagen 4</label>
<input type="file" id="imagen4" name="imagenesProducts">

            
            <div class="buttons-form">
          
       
         
            <button type="submit" class="button-form">Actualizar producto</button>
        
            <button type="reset" class="button-form" onclick="undoEdit()">Deshacer</button>
        </div>
        
    </form>



</main>

<script>
    function undoEdit() {
        const productId = document.querySelector('input[name="productId"]').value;
        window.location.href = `/product/${productId}`;
    }
</script>
</body>
</html>
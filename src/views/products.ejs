<body>
    <!--   agregar el header -->
    <%- include('./partials/header.ejs')  %>

<div >
        
                <h1        class="titulo_producto"> PRODUCTOS DISPONIBLES</h1>

            <% for( let i = 0; i < products.length; i++ ) { %>
            
        <article  class="plasticos_articulo"  >
            <a href="/product/<%= products[i].id %>"><%= products[i].name %>
            
                <img class="plasticos_imagen" src="/images/productos/<%= products[i].photo1 %>" alt="<%= products[i].name %><%= products[i].name %>">


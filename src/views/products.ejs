                    <form action="/product/<%= products[i].id %>/delete?_method=DELETE" method="POST">
                    
                        <button type="submit" id="delete">Eliminar este producto</button>
                    </form>
                <%}%>
            </div>

            
        </article>
     <% } %>

     <% if (locals.user){%>
        <article  class="plasticos_articulo"  >
            <a href="/product/new-product" id="CrearProducto">
